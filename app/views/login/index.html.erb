
<div class="flex justify-center items-start min-h-screen pt-20">
  <div class="w-full max-w-md px-4">
    <h1 class="text-3xl font-bold mb-6">Login</h1>
    <%= form_with(model: User.new, url: login_new_path, id: 'login', class: 'space-y-4') do |f| %>

      <%= f.label :username, class: 'block text-sm font-medium text-gray-700' %>
      <%= f.text_field :username, class: 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500' %>

      <%= f.label :password, class: 'block text-sm font-medium text-gray-700' %>
      <%= f.password_field :password, class: 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500' %>

      <div class="flex gap-4">
        <%= f.submit "Log in", class: "flex-1 bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>

        <%= button_tag "Sign Up", type: "button", class: "flex-1 bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2", onclick: "redirect('#{new_user_path}')" %>
      </div>
    <% end %>

    <div id='loginMsg' class="mt-4"></div>
  </div>

</div>
