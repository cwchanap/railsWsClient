<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Listing articles</h1>
    <%= link_to 'Admin Page', admin_index_path, class: "bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600" if isAdmin %>
  </div>

  <div class="overflow-x-auto bg-white shadow-md rounded-lg mb-6">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-800">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">Title</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">User</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">Status</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @articles.each do |article| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= article.title %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= getUserName(article.user_id) %></td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= (article.status) ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                <%= (article.status) ? 'Open' : 'Closed' %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
              <%= link_to 'Show', article_path(article), class: "text-blue-600 hover:text-blue-900" %>
              <%= link_to 'Edit', edit_article_path(article), class: "text-blue-600 hover:text-blue-900" if (isAdmin || isUserMatch(article.user_id)) %>
              <%= link_to (article.status) ? 'Close' : 'Open', article_toggle_path(article), class: "text-blue-600 hover:text-blue-900" if isAdmin %>
              <%= link_to 'Delete', article_path(article), method: :delete, class: "text-red-600 hover:text-red-900" if (isAdmin || isUserMatch(article.user_id)) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="space-x-4">
    <%= link_to 'Add New Article', new_article_path, class: "bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 inline-block" %>
    <%= button_tag "To heaven", type: "button", class: "bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700", onclick: "redirect('/heaven')" %>
    <%= link_to 'LogOut', login_destroy_path, class: "bg-gray-600 text-white px-4 py-2 rounded-md hover:bg-gray-700 inline-block", method: 'delete' %>
  </div>

</div>
