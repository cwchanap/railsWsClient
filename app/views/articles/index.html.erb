
<h1>Listing articles</h1>
 
<table class="table">
  <thead class="thead-dark"><tr>
    <th scope="col">Title</th>
    <th scope="col">Status</th>
    <th scope="col"></th>
    <th scope="col"></th>
    <th scope="col"></th>
    <th scope="col"></th>
  </tr></thead>

  <% @articles.each do |article| %>
    <tr>
      <td width="75%"><%= article.title %></td>
      <td><%= (article.status == true) ? 'Open' : 'Closed' %></td>
      <td><%= link_to 'Show', article_path(article) , class: "btn btn-primary" %></td>
      <td><%= link_to 'Edit', edit_article_path(article), class: "btn btn-primary"  %></td>
      <td><%= link_to (article.status == true) ? 'Close' : 'Open', article_toggle_path(article), class: "btn btn-primary"  %></td>      
      <td><%= link_to 'Delete', article_path(article), method: :delete, class: "btn btn-primary"   %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Add New Article', new_article_path , class: "btn btn-primary"%><br><br>
<%= button_to 'LogOut', login_destroy_path, class: "btn btn-info", method: 'delete' %>