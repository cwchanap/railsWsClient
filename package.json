{
  "name": "railsWsClient",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "bun build app/javascript/application.ts --outdir=app/assets/builds --entry-naming=[name].js --target=browser --sourcemap=external",
    "build:css": "postcss ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css",
    "dev:css": "postcss ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --watch",
    "dev": "bun build app/javascript/application.ts --outdir=app/assets/builds --entry-naming=[name].js --target=browser --sourcemap=external --watch",
    "lint": "bun run lint:ts && bun run lint:ruby",
    "lint:ts": "eslint 'app/javascript/**/*.{ts,js}'",
    "lint:ruby": "bundle exec rubocop",
    "lint:fix": "bun run lint:ts:fix && bun run lint:ruby:fix",
    "lint:ts:fix": "eslint 'app/javascript/**/*.{ts,js}' --fix",
    "lint:ruby:fix": "bundle exec rubocop -A",
    "format": "prettier --write 'app/javascript/**/*.{ts,js,json}'",
    "format:check": "prettier --check 'app/javascript/**/*.{ts,js,json}'",
    "typecheck": "tsc --noEmit",
    "test": "bun test && bundle exec rake test",
    "test:ts": "bun test",
    "test:ts:watch": "bun test --watch",
    "test:ts:coverage": "bun test --coverage",
    "test:ruby": "bundle exec rake test",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.rb": [
      "bundle exec rubocop -A"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/bun": "^1.3.4",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.20"
  }
}
